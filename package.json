{
    "name": "@lmscloud/lms-calendar",
    "private": true,
    "version": "0.3.2",
    "description": "A calendar component.",
    "main": "lms-calendar.js",
    "module": "lms-calendar.js",
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:watch": "vite build --watch",
        "clean": "rimraf lms-calendar.{d.ts,d.ts.map,js,js.map} test/lms-calendar.{d.ts,d.ts.map,js,js.map} test/lms-calendar_test.{d.ts,d.ts.map,js,js.map}",
        "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
        "lint:eslint": "eslint 'src/**/*.ts'",
        "lint:lit-analyzer": "lit-analyzer",
        "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
        "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
        "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
        "checksize": "cat ./build/lms-calendar.bundled.js | gzip -9 | wc -c",
        "test": "NODE_OPTIONS=--experimental-vm-modules mocha",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules mocha --watch",
        "test:components": "web-test-runner",
        "test:components:watch": "web-test-runner --watch",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test-storybook": "storybook test"
    },
    "keywords": [
        "web-components",
        "lit-element",
        "typescript",
        "lit"
    ],
    "author": "Paul Derscheid <paul.derscheid@lmscloud.de>",
    "license": "BSD-3-Clause",
    "dependencies": {
        "@lit-labs/observers": "^2.1.0",
        "@lit-labs/signals": "^0.2.0",
        "@lit/localize": "^0.12.2",
        "@neodrag/vanilla": "^2.3.1",
        "@types/luxon": "^3.7.1",
        "lit": "^3.3.2",
        "luxon": "^3.7.2",
        "remeda": "^2.33.6",
        "ts-ics": "^2.4.1",
        "ts-pattern": "^5.9.0"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
        "@custom-elements-manifest/analyzer": "^0.11.0",
        "@lit/localize-tools": "^0.8.1",
        "@open-wc/testing": "^4.0.0",
        "@remcovaes/web-test-runner-vite-plugin": "^1.4.0",
        "@storybook/addon-docs": "^10.2.13",
        "@storybook/test-runner": "^0.24.2",
        "@storybook/web-components": "10.2.13",
        "@storybook/web-components-vite": "^10.2.13",
        "@types/chai": "^5.2.3",
        "@types/mocha": "^10.0.10",
        "@typescript-eslint/eslint-plugin": "^8.56.1",
        "@typescript-eslint/parser": "^8.56.1",
        "@web/dev-server": "^0.4.6",
        "@web/dev-server-esbuild": "^1.0.5",
        "@web/dev-server-legacy": "^2.1.1",
        "@web/rollup-plugin-html": "^3.1.0",
        "@web/test-runner": "^0.20.2",
        "@web/test-runner-playwright": "^0.11.1",
        "@webcomponents/webcomponentsjs": "^2.8.0",
        "chai": "^6.2.2",
        "eslint": "^10.0.2",
        "eslint-plugin-storybook": "10.2.13",
        "lit-analyzer": "^2.0.3",
        "mocha": "^11.7.5",
        "playwright": "^1.58.2",
        "prettier": "^3.8.1",
        "prettier-plugin-organize-imports": "^4.3.0",
        "rimraf": "^6.1.3",
        "rolldown": "1.0.0-rc.6",
        "storybook": "^10.2.13",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-minify": "^2.1.0",
        "vite-plugin-static-copy": "^3.2.0"
    },
    "customElements": "custom-elements.json"
}

{
    "name": "@lmscloud/lms-calendar",
    "private": true,
    "version": "0.3.2",
    "description": "A calendar component.",
    "main": "lms-calendar.js",
    "module": "lms-calendar.js",
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:watch": "vite build --watch",
        "clean": "rimraf lms-calendar.{d.ts,d.ts.map,js,js.map} test/lms-calendar.{d.ts,d.ts.map,js,js.map} test/lms-calendar_test.{d.ts,d.ts.map,js,js.map}",
        "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
        "lint:eslint": "eslint 'src/**/*.ts'",
        "lint:lit-analyzer": "lit-analyzer",
        "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
        "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
        "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
        "checksize": "cat ./build/lms-calendar.bundled.js | gzip -9 | wc -c",
        "test": "NODE_OPTIONS=--experimental-vm-modules mocha",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules mocha --watch",
        "test:components": "web-test-runner",
        "test:components:watch": "web-test-runner --watch",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test-storybook": "storybook test"
    },
    "keywords": [
        "web-components",
        "lit-element",
        "typescript",
        "lit"
    ],
    "author": "Paul Derscheid <paul.derscheid@lmscloud.de>",
    "license": "BSD-3-Clause",
    "dependencies": {
        "@lit-labs/observers": "^2.0.2",
        "@lit/localize": "^0.11.4",
        "@neodrag/vanilla": "^2.3.0",
        "@types/luxon": "^3.4.2",
        "lit": "^3.1.2",
        "luxon": "^3.4.4",
        "remeda": "^1.45.2",
        "ts-ics": "^2.0.4",
        "ts-pattern": "^5.0.8"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.2",
        "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
        "@custom-elements-manifest/analyzer": "^0.6.9",
        "@lit/localize-tools": "^0.6.10",
        "@open-wc/testing": "^3.2.2",
        "@remcovaes/web-test-runner-vite-plugin": "^1.3.0",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/test": "^8.6.14",
        "@storybook/test-runner": "^0.21.0",
        "@storybook/web-components": "8.6.14",
        "@storybook/web-components-vite": "^8.6.14",
        "@types/chai": "^5.0.1",
        "@types/mocha": "^10.0.10",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "@web/dev-server": "^0.1.38",
        "@web/dev-server-esbuild": "^1.0.4",
        "@web/dev-server-legacy": "^1.0.3",
        "@web/rollup-plugin-html": "^1.11.1",
        "@web/test-runner": "^0.13.31",
        "@web/test-runner-playwright": "^0.8.10",
        "@webcomponents/webcomponentsjs": "^2.8.0",
        "chai": "^5.1.2",
        "eslint": "^8.57.0",
        "lit-analyzer": "^1.2.1",
        "mocha": "^10.8.2",
        "playwright": "^1.54.2",
        "prettier": "^2.8.8",
        "prettier-plugin-organize-imports": "^3.2.4",
        "rimraf": "^3.0.2",
        "rolldown": "1.0.0-beta.7",
        "storybook": "^8.6.14",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.2",
        "typescript": "~5.3.3",
        "vite": "^5.4.0",
        "vite-plugin-minify": "^2.1.0",
        "vite-plugin-static-copy": "^3.1.1"
    },
    "customElements": "custom-elements.json"
}

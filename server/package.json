{
    "name": "@jpahd/kalendus-server",
    "version": "0.1.0",
    "description": "REST + SSE API server for Kalendus calendar â€” includes Hono app, SQLite persistence, and browser client adapters.",
    "keywords": [
        "calendar",
        "calendar-api",
        "hono",
        "kalendus",
        "lit",
        "sqlite",
        "sse",
        "web-components"
    ],
    "homepage": "https://github.com/pders01/kalendus/tree/main/server",
    "bugs": {
        "url": "https://github.com/pders01/kalendus/issues"
    },
    "license": "MIT",
    "author": "Paul Derscheid <paulderscheid@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/pders01/kalendus.git",
        "directory": "server"
    },
    "files": [
        "dist"
    ],
    "type": "module",
    "main": "./dist/server.js",
    "types": "./dist/server.d.ts",
    "exports": {
        ".": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.js"
        },
        "./client": {
            "types": "./dist/adapters/kalendus-api-client.d.ts",
            "import": "./dist/adapters/kalendus-api-client.js"
        },
        "./lit": {
            "types": "./dist/adapters/kalendus-lit-adapter.d.ts",
            "import": "./dist/adapters/kalendus-lit-adapter.js"
        },
        "./adapters": {
            "types": "./dist/adapters/index.d.ts",
            "import": "./dist/adapters/index.js"
        },
        "./package.json": "./package.json"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "start": "node --import tsx src/index.ts",
        "build": "tsc",
        "clean": "rm -rf dist",
        "test": "NODE_OPTIONS='--experimental-vm-modules --import=tsx' mocha",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules --import=tsx' mocha --watch",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "tsx src/db/migrate.ts",
        "db:seed": "tsx src/db/seed.ts",
        "lint": "oxlint src/",
        "format": "oxfmt --write 'src/**/*.ts' '*.json'",
        "format:check": "oxfmt --check 'src/**/*.ts' '*.json'",
        "prepublishOnly": "pnpm run clean && pnpm run build && pnpm test && pnpm lint"
    },
    "dependencies": {
        "@hono/node-server": "^1.14.0",
        "@hono/zod-validator": "^0.5.0",
        "better-sqlite3": "^11.8.1",
        "drizzle-orm": "^0.38.4",
        "hono": "^4.7.4",
        "nanoid": "^5.1.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.13",
        "@types/chai": "^5.2.3",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.13.4",
        "chai": "^6.2.2",
        "drizzle-kit": "^0.30.4",
        "mocha": "^11.7.5",
        "oxfmt": "0.35.0",
        "oxlint": "1.50.0",
        "tsx": "^4.19.3",
        "typescript": "^5.9.3"
    }
}

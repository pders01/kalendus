{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "skipLibCheck": true,
        "lib": ["es2020", "DOM", "DOM.Iterable"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true,
                "rules": {
                    "no-invalid-css": "off"
                }
            }
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": []
}
